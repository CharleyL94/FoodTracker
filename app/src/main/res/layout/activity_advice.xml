<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What foods should I avoid during pregnancy?"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="@color/textColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foods:"
        android:textSize="25dp"
        android:textColor="@color/textColor"/>

    <ListView
        android:id="@+id/avoid_food_array"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:entries="@array/avoid_array"
        android:textSize="15dp">
    </ListView>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Drinks:"
    android:textSize="25dp"
        android:textColor="@color/textColor"/>

    <ListView
    android:entries="@array/drink_array"
    android:layout_width="wrap_content"
    android:layout_height="125dp"
    android:textSize="15dp"
        android:layout_weight="0.11">
        </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Further advice"
        android:textColor="@color/textColor"/>

    <ListView
        android:entries="@array/advice_array"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:textSize="15dp"
        android:textColor="@color/textColor">

    </ListView>

</LinearLayout>