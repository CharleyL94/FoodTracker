<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello! Keep track of your diet, or click advice for more information about healthy eating in pregnancy"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Note what you have had to eat or drink today, don't forget to put the date (dd/mm/yy)!"
        android:fontFamily=""
        android:textSize="20dp"
        android:id="@+id/textView"
        android:textColor="@color/textColor"/>


    <EditText
        android:id="@+id/editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:gravity="top"
        android:lines="2"
         />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:layout_weight="0.21"
        android:textColor="@color/textColor"/>

    <!--<Button-->
        <!--style="?android:attr/buttonStyleSmall"-->
        <!--android:layout_width="157dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="View Entries"-->
        <!--android:id="@+id/button2"-->
        <!--android:layout_weight="0.09" />-->

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:text="Advice"
        android:id="@+id/button3"
        android:layout_weight="0.19"
        android:textColor="@color/textColor"/>


</LinearLayout>